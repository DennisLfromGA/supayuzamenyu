#!/bin/bash -e
#Chromebook menu

# PS3 – prompt used by “select” inside shell script
PS3='Please enter your choice (number): '

# menu options
options[0]="--Install-- Minecraft Game"
options[1]="--Install-- Eclipse Integrated Development Editor"
options[2]="--Install-- Gimp Image Editor"
options[3]="--Install-- Alacarte Ubuntu Menu builder"
options[4]="--Quit menu ------------------------------------------------"


clear

select opt in "${options[@]}"
do
	case $opt in
		"${options[0]}")
			~/Downloads/target_files/minecraft.sh
			;;
		"${options[1]}")
			~/Downloads/target_files/eclipse.sh
			;;
		"${options[2]}")
			~/Downloads/target_files/gimp.sh
			;;
		"${options[3]}")
			~/Downloads/target_files/alacarte.sh
			;;
		"${options[4]}")
			break
			;;
		*) echo "Invalid option" ;;
	esac
done

